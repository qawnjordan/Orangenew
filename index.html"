            <div class="hint-text">الرجاء إدخال رقم الهاتف الذي يبدأ ب:  077 أو 078 أو 79</div>
          </div>

          <!-- Password Field -->
          <div class="field-holder">
            <label for="password">كلمة السر</label>
            <div class="eye-icon-wrapper">
              <input class="w-input" maxlength="256" name="password" placeholder="" type="password" id="password" required=""/>
              <button type="button" class="eye-icon" onclick="togglePassword()" id="eyeToggle" aria-label="Show password">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
            <div class="forgot-password">
              <a href="javascript:void(0);" onclick="handleForgotPassword()">نسيت كلمة السر</a>
